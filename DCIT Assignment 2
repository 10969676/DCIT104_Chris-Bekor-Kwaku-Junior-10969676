#include <iostream>

using namespace std;

int main()
{
    int x = 0;
    int i;
    int sum = 0;

    for(int i = 1; i <= 10000 ; i++)
        {
        if(i % 2 == 0)
        {
        sum = sum + i;
        x++;

        }

        }
        int average = sum / x;
        cout << endl << "The Average is " << average;


    return 0;
}
